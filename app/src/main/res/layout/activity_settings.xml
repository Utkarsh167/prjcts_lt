<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:keepScreenOn="true"
    tools:context="graymars.feedibk.com.myapplication.Activities.Settings">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_backArrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_back_arrow" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView_settings_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@drawable/logo_hp" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_settings_Page"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_settings_Page"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout_menu_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_settings" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="left|center"
                    android:text="Tablet Settings"
                    android:textColor="#000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/linearLayout_menu_system_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_vertical_settings" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="left|center"
                    android:text="System Settings"
                    android:textColor="#000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/linearLayout_menu_bluetoothName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_ble_name" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="left|center"
                    android:text="Change Bluetooth Device Name"
                    android:textColor="#000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/linearLayout_menu_ipAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_server" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="left|center"
                    android:text="Change Server IP"
                    android:textColor="#000" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/linearLayout_menu_tab_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_server" />

                <TextView
                    android:id="@+id/textView_tabNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="left|center"
                    android:text="Tab No:"
                    android:textColor="#000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


            <LinearLayout
                android:id="@+id/linearLayout_menu_tablet_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/rel_menu_tablet_timer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_timer"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_timer" />

                    <TextView
                        android:id="@+id/text_view_default_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="24dp"
                        android:layout_toRightOf="@id/iv_timer"
                        android:enabled="false"
                        android:gravity="left|center"
                        android:inputType="number"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/default_timer_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:enabled="false"
                        android:gravity="left|center"
                        android:hint="Enter Tablet default timer in miniutes"
                        android:inputType="number"
                        android:textColor="#000" />

                    <ImageView
                        android:layout_marginTop="12dp"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/imageview_save_default_timer"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check" />

                </RelativeLayout>

                <!--            <ImageView-->
                <!--                android:layout_gravity="center_vertical"-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_weight=".06"-->
                <!--                android:layout_height="30dp"-->
                <!--                android:src="@drawable/ic_timer"/>-->

                <!--            <EditText-->
                <!--                android:inputType="number"-->
                <!--                android:enabled="false"-->
                <!--                android:id="@+id/default_timer_edit_text"-->
                <!--                android:layout_weight=".6"-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_height="50dp"-->
                <!--                android:layout_marginLeft="24dp"-->
                <!--                android:hint="Enter Tablet default timer in miniutes"-->
                <!--                android:gravity="left|center"-->
                <!--                android:textColor="#000"-->
                <!--                />-->

                <!--            <TextView-->
                <!--                android:visibility="gone"-->
                <!--                android:inputType="number"-->
                <!--                android:enabled="false"-->
                <!--                android:id="@+id/text_view_default_timer"-->
                <!--                android:layout_weight=".6"-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_height="50dp"-->
                <!--                android:layout_marginLeft="24dp"-->
                <!--                android:hint="Enter Tablet default timer in miniutes"-->
                <!--                android:gravity="left|center"-->
                <!--                android:textColor="#000"-->
                <!--                />-->

                <!--            <ImageView-->

                <!--                android:id="@+id/imageview_edit_default_timer"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:layout_weight=".104"-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_height="30dp"-->
                <!--                android:src="@drawable/ic_edit"/>-->

                <!--            <ImageView-->
                <!--                android:id="@+id/imageview_save_default_timer"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:layout_weight=".2"-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_height="30dp"-->
                <!--                android:src="@drawable/ic_check"/>-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/linearLayout_menu_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_logout" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="left|center"
                    android:text="Logout"
                    android:textColor="#000" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:text="Version 1.1"
        android:textColor="#000" />


</RelativeLayout>
