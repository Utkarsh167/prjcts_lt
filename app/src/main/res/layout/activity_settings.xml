                    android:textColor="#000" />

                <ImageView
                    android:layout_marginTop="12dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageview_save_default_timer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
