<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/coordinatorLayout_remarks"
    android:layout_height="match_parent">

<!--    android:background="@drawable/background"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title_remarks"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_15ssp"
        android:textColor="#000"
        android:text="Let us know how can we improve our facility?"
        android:gravity="center"
        android:fontFamily="@font/segoeui_nrml"
        />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_centerInParent="true"
            android:id="@+id/editText_remarks_ti_lay"
            >

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:id="@+id/editText_remarks"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:hint="Please write here..."
        android:textColorHint="#000"
        android:textColor="#000"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/rounded_border_blue"
        android:fontFamily="@font/segoeui_nrml"
        />



<!--            <-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="Floating Hint Disabled" />-->

        </android.support.design.widget.TextInputLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_remarkScreen"
        android:layout_below="@+id/editText_remarks_ti_lay"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

    <Button
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/btn_submit_remarks"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText_remarks_ti_lay"
        android:background="@drawable/rounded_background_blue"
        android:text="Submit"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/segoeui_nrml"
        />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>