<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout_feedback"
    tools:context="graymars.feedibk.com.myapplication.Activities.Feedback">

<!--    android:background="@drawable/background"-->

    <!--    <android.support.v4.widget.SwipeRefreshLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/swipeRefreshLayout">-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:padding="@dimen/_6sdp"
                android:id="@+id/imageView_backArrow_survey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_title_feedback"
                android:padding="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_28sdp"
                android:text="How was your experience today at wework?"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:fontFamily="@font/segoeui_nrml"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView_settings"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_settings"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_1sdp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/toolbar">

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title_feedback"
        android:padding="20dp"
        android:textSize="25sp"
        android:visibility="gone"
        android:textColor="#000"
        android:text="How was your experience today at wework?"
        android:gravity="center"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/linearLayout_feedback_images">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:id="@+id/imageView_great"
                    android:layout_weight="1"
                    app:civ_border_width="0dp"
                    android:layout_gravity="center"
                    app:civ_border_color="#FF000000"
                    android:src="@drawable/group_1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="@dimen/_12ssp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Very Happy"
                    android:fontFamily="@font/segoeui_nrml"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:id="@+id/imageView_good"
                    android:layout_weight="1"
                    app:civ_border_width="0dp"
                    android:layout_gravity="center"
                    app:civ_border_color="#FF000000"
                    android:src="@drawable/group_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="@dimen/_12ssp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Happy"
                    android:fontFamily="@font/segoeui_nrml"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="1"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:id="@+id/imageView_okay"
                    android:layout_weight="1"
                    app:civ_border_width="0dp"
                    android:layout_gravity="center"
                    app:civ_border_color="#FF000000"
                    android:src="@drawable/group_3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="@dimen/_12ssp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Neutral"
                    android:fontFamily="@font/segoeui_nrml"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:id="@+id/imageView_bad"
                    android:layout_weight="1"
                    app:civ_border_width="0dp"
                    android:layout_gravity="center"
                    app:civ_border_color="#FF000000"
                    android:src="@drawable/group_4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="@dimen/_12ssp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Unhappy"
                    android:fontFamily="@font/segoeui_nrml"
                    />

            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:id="@+id/imageView_terrible"
                android:layout_weight="1"
                app:civ_border_width="0dp"
                android:layout_gravity="center"
                app:civ_border_color="#FF000000"
                android:src="@drawable/group_5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/_12ssp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Very unhappy"
                android:fontFamily="@font/segoeui_nrml"
                />

        </LinearLayout>






        
    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_feedback"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    </RelativeLayout>

    </RelativeLayout>
<!--    </android.support.v4.widget.SwipeRefreshLayout>-->

</android.support.design.widget.CoordinatorLayout>
